{
  "$schema": "https://turborepo.dev/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".output/**", "dist/**"],
      "inputs": [
        "src/**",
        "vite.config.ts",
        "tsconfig.json",
        "wrangler.jsonc",
        "package.json"
      ]
    },
    "dev": {
      "dependsOn": ["^build"],
      "persistent": true,
      "cache": false
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "format": {
      "cache": false
    },
    "test": {
      "dependsOn": ["^build"]
    },
    "typecheck": {
      "dependsOn": ["^typecheck"],
      "outputs": []
    },
    "deploy": {
      "dependsOn": ["build"],
      "cache": false
    },
    "cf-typegen": {
      "cache": false
    }
  }
}
