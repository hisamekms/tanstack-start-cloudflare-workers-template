{
  "$schema": "https://turborepo.dev/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".output/**", "dist/**"],
      "inputs": ["src/**", "vite.config.ts", "tsconfig.json", "wrangler.toml", "package.json"]
    },
    "dev": {
      "dependsOn": ["^build"],
      "persistent": true,
      "cache": false,
      "passThroughEnv": ["APP_ENV", "AUTH_SECRET"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "format": {
      "cache": false
    },
    "test": {
      "dependsOn": ["^build"]
    },
    "typecheck": {
      "dependsOn": ["^typecheck"],
      "outputs": []
    },
    "preview": {
      "dependsOn": ["build"],
      "persistent": true,
      "cache": false
    },
    "deploy": {
      "dependsOn": ["build"],
      "cache": false
    },
    "cf-typegen": {
      "cache": false
    },
    "test:e2e": {
      "dependsOn": ["^build"],
      "cache": false,
      "passThroughEnv": ["APP_ENV", "AUTH_SECRET", "CI"]
    },
    "test:integration": {
      "dependsOn": ["^build"],
      "cache": false
    }
  }
}
